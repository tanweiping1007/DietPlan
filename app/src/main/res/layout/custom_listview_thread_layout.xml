<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_select"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail_thread"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <!-- Movie Title -->
    <TextView
        android:id="@+id/title_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_thread"
        android:layout_toRightOf="@+id/thumbnail_thread"
        android:textSize="17dp"
        android:textStyle="bold" />



    <!-- Genre -->
    <TextView
        android:id="@+id/username_thread"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_thread"
        android:layout_toRightOf="@+id/thumbnail_thread"
        android:textColor="@color/genre"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/timestamp_thread"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_thread"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnail_thread"
        android:textColor="@color/genre"
        android:textSize="13dip" />




</RelativeLayout>